# =============================================================================
# CreditSmart Backend API - Environment Configuration
# =============================================================================
# Copy this file to .env and customize for your environment
# Phase 3C-1: Production Hardening - Complete configuration template
#
# IMPORTANT: Never commit .env file to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
APP_NAME=credit-risk-backend
APP_VERSION=0.1.0

# Environment: development, staging, production
# - development: Verbose logging, CORS permissive, debug features
# - staging: Production-like, limited logging, stricter CORS
# - production: Minimal logging, strict CORS, security hardened
ENVIRONMENT=development

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
# - DEBUG: Very verbose (development only)
# - INFO: Normal operational messages (recommended for production)
# - WARNING: Important warnings (production minimum)
# - ERROR: Error messages only
# - CRITICAL: Critical failures only
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# Network & API Configuration
# -----------------------------------------------------------------------------
# Backend URL (used for health checks and service discovery)
# Development: http://localhost:8000
# Production: https://api.yourdomain.com
BACKEND_URL=http://localhost:8000

# -----------------------------------------------------------------------------
# CORS (Cross-Origin Resource Sharing) Configuration
# -----------------------------------------------------------------------------
# WARNING: NEVER use "*" wildcard in production!
# Comma-separated list of allowed frontend origins
#
# Development example:
# CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000
#
# Production example:
# CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
#
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173

# Allowed HTTP methods (comma-separated)
# For security, only include methods your API actually uses
# Common safe values: GET,POST
# Avoid: PUT,DELETE,PATCH unless specifically needed
CORS_METHODS=GET,POST

# Allow credentials (cookies, authorization headers)
# Set to true if using authentication
# Set to false for public APIs
CORS_ALLOW_CREDENTIALS=true

# -----------------------------------------------------------------------------
# ML Model Configuration (Optional)
# -----------------------------------------------------------------------------
# Path to trained model artifacts directory
# Default: models/
# MODEL_PATH=models/

# Use ML model if available (true) or fallback to rule-based (false)
# Set to false to force rule-based engine for testing
# USE_ML_MODEL=true

# Inference timeout (seconds)
# Maximum time allowed for model prediction
# Default: 30 seconds
# INFERENCE_TIMEOUT=30

# -----------------------------------------------------------------------------
# Security Settings (Production Only)
# -----------------------------------------------------------------------------
# API rate limiting (requests per minute per IP)
# Uncomment and set for production deployment
# RATE_LIMIT=100

# Enable API key authentication (production)
# API_KEY_REQUIRED=false
# API_KEY=your-secret-api-key-here

# Enable request ID tracking in headers
# REQUEST_ID_HEADER=true

# -----------------------------------------------------------------------------
# Monitoring & Observability (Optional)
# -----------------------------------------------------------------------------
# Sentry DSN for error tracking
# SENTRY_DSN=https://your-sentry-dsn-here

# DataDog API key for metrics
# DATADOG_API_KEY=your-datadog-api-key-here

# Prometheus metrics endpoint
# ENABLE_PROMETHEUS=false

# -----------------------------------------------------------------------------
# Database Configuration (Future Feature)
# -----------------------------------------------------------------------------
# Uncomment when database integration is added
# DATABASE_URL=postgresql://user:password@localhost:5432/creditsmart
# DATABASE_POOL_SIZE=10

# -----------------------------------------------------------------------------
# Validation & Safety Defaults
# -----------------------------------------------------------------------------
# These are built into the application but can be overridden

# Enable strict input validation (NaN/Inf checks)
# STRICT_VALIDATION=true

# Enable request logging (set to false in production for privacy)
# LOG_REQUESTS=false

# Sanitize error messages (remove file paths, internal details)
# SANITIZE_ERRORS=true

# -----------------------------------------------------------------------------
# Frontend Configuration (Vite)
# -----------------------------------------------------------------------------
# Backend API base URL for frontend requests
VITE_API_BASE_URL=http://localhost:8000

# Feature flag: Use mock prediction data (rollback safety)
# true = use mock data | false = use live backend
VITE_USE_MOCK_PREDICTION=false

# =============================================================================
# End of Configuration
# =============================================================================
